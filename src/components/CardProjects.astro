---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  title: string;
  description: string;
  link?: string;
  tags: string[];
}

const { img, title, description, link, tags } = Astro.props;
---

<article
  class="flex flex-col items-center w-full h-full md:flex-row gap-6 md:gap-10"
>
  <a
    href={link}
    target="_blank"
    class="w-full h-[250px] md:h-[230px] md:w-9/12 relative rounded-xl overflow-hidden flex dark:bg-gray-700/50 bg-purple-200/50"
  >
    <Image
      class="object-cover w-full rounded-lg absolute h-full left-10 top-10 transition-transform transform hover:scale-105 duration-300 ease-in-out"
      src={img}
      alt="img"
    />
  </a>

  <div
    class="flex flex-col justify-between md:w-[75%] py-4 md:py-2 leading-normal"
  >
    <h5
      class="mb-2 font-bold tracking-tight text-3xl text-slate-800 dark:text-white"
    >
      {title}
    </h5>
    <p class="mb-3 font-normal text-slate-600 text-lg dark:text-slate-300">
      {description}
    </p>

    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="px-2 py-1 text-sm font-medium dark:text-white text-slate-600 bg-purple-200/60 dark:bg-purple-800/50 rounded-lg">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</article>
